{
	"compilerOptions": {
		"output": "bin-debug/ObjectBuilder.swf",
		"source-path": [
			"src"
		],
		"library-path": [
			"libs"
		]
	},
	"files": [
		"src/ObjectBuilder.mxml"
	],
	"application": "src/ObjectBuilder-app.xml",
	"additionalOptions": "-locale=en_US,es_ES,pt_BR\r\n-source-path=locale/{locale}\r\n-allow-source-path-overlap=true\r\n",
	"airOptions": {
		"output": "bin",
		"files": [
			{
				"file": "assets/icon",
				"path": "icon"
			},
			{
				"file": "src/config",
				"path": "config"
			}
		],
		"signingOptions": {
			"keystore": "object_builder.p12",
			"storetype": "pkcs12",
			"tsa": "https://freetsa.org/tsr"
		}
	},
	"config": "air",
	"workers": [
		{
			"file": "src/ObjectBuilderWorker.as",
			"output": "workerswfs/ObjectBuilderWorker.swf"
		}
	]
}
